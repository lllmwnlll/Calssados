 <!-- ========== Generic Gloves ========== -->
<ThingDef ParentName="MWN_HandwearMakeableBase">
    <defName>MWN_Apparel_genericgloves</defName>
    <label>gloves</label>
    <description>Maded from leather or fabric. It's a common glove which give protection against cold and to possible injuries. Fragile but cheap, will deteriorate quickly also slows down work a bit.</description>
	<techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Handwear/GenericGloves_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToMake>3000</WorkToMake>
      <Mass>0.15</Mass>
      <ArmorRating_Blunt>0.015</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.015</ArmorRating_Sharp>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
	  <EquipDelay>0.6</EquipDelay>
    </statBases>
	<equippedStatOffsets>
		<WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
	</equippedStatOffsets>
    <apparel>
      <tags>
        <li>IndustrialBasic</li>
		<li>MedievalMilitary</li>
		<li>Neolithic</li>
      </tags>
	  <layers>
        <li>Middle</li>
		<li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
<!-- ========== Fingerless Gloves ========== -->
<ThingDef ParentName="MWN_HandwearMakeableBase">
    <defName>MWN_Apparel_fingerlessgloves</defName>
    <label>fingerless gloves</label>
    <description>These gloves can be worn under other gloves, improving mainly protection and a bit better insulation against cold. Cheap but deteriorate very quickly.</description>
	<techLevel>Industrial</techLevel>
    <graphicData>
      <texPath>Handwear/FingerlessGloves_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
	  <WorkToMake>2400</WorkToMake>
	  <Mass>0.3</Mass>
	  <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
	  <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
	  <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
	  <EquipDelay>1.0</EquipDelay>
    </statBases>
    <apparel>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
	  <layers>
        <li>OnSkin</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
<!-- ========== Padded Leather Gloves ========== -->
<ThingDef ParentName="MWN_HandwearMakeableBase">
    <defName>MWN_Apparel_paddedgloves</defName>
    <label>padded gloves</label>
    <description>Protects the entire posterior part of the hand with hard plates, meanwhile in the phalanges of the fingers also there are hard points, while the anterior part of the hand and the joints receive a only layer of leather for protection being its weak point.</description>
    <graphicData>
      <texPath>Handwear/PaddedGloves_OnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<techLevel>Medieval</techLevel>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.10</Mass>
	  <StuffEffectMultiplierArmor>0.10</StuffEffectMultiplierArmor>
      <ArmorRating_Blunt>0.085</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
	  <EquipDelay>1.0</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>-0.50</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
	  <layers>
        <li>Middle</li>
		<li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
